<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <com.woyaofa.ui.widget.HeadView
        android:id="@+id/hv_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_h"
        android:background="@color/head_bg"
        mAttr:isNeedLeft="true"
        mAttr:isNeedRight="true"
        mAttr:text="修改地址" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/activity_address_edit_ll_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/white_state"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="发  货  人："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_m" />

                <EditText
                    android:id="@+id/activity_address_edit_et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_m" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_address_edit_ll_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/divider_block"
                android:background="@drawable/white_state"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联系电话："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_m" />

                <EditText
                    android:id="@+id/activity_address_edit_et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="13"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_m" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_address_edit_ll_area"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/divider_block"
                android:background="@drawable/white_state"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="所在区域："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_m" />

                <TextView
                    android:id="@+id/activity_address_edit_tv_pca"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_m" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_address_edit_ll_street"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/divider_block"
                android:background="@drawable/white_state"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="街        道："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_m" />

                <EditText
                    android:id="@+id/activity_address_edit_et_street"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_m" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_address_edit_ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/divider_block"
                android:background="@drawable/white_state"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="详细地址："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_m" />

                <EditText
                    android:id="@+id/activity_address_edit_et_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="150"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>

            <TextView
                android:id="@+id/activity_address_edit_tv_delete"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/divider_block"
                android:background="@drawable/white_state"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="删除地址"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_m" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/activity_address_edit_tv_default_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/orange_straight_corner_state"
        android:gravity="center"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="设置为默认地址"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_b" />
</LinearLayout>