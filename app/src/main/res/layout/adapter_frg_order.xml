<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_frg_order_ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/adapter_frg_order_ll_company"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="16dp"
            android:src="@mipmap/logistic_gray" />

        <TextView
            android:id="@+id/adapter_frg_order_tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_m" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="8dp"
            android:src="@mipmap/arrow_gray_right" />

        <TextView
            android:id="@+id/adapter_frg_order_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#a2a2a2"
            android:textSize="@dimen/text_size_m" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/divider"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:id="@+id/adapter_frg_order_tv_line_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_m" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/arrive_gray_right" />

        <TextView
            android:id="@+id/adapter_frg_order_tv_line_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_m" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@android:color/white"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <ImageView
            android:id="@+id/adapter_frg_order_iv_logo"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/adapter_frg_order_iv_logo"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/adapter_frg_order_tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxHeight="33dp"
                android:textColor="@color/text_content"
                android:textSize="@dimen/text_size_m" />

            <TextView
                android:id="@+id/adapter_frg_order_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/text_content"
                android:textSize="@dimen/text_size_m" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/default_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_frg_order_tv_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/text_content"
                android:textSize="@dimen/text_size_m" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价："
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_m" />

            <TextView
                android:id="@+id/adapter_frg_order_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_l" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="元"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_m" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/default_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="6dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/adapter_frg_order_tv_option1"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_margin="6dp"
            android:background="@drawable/gray_border_rounded_corner_state"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="#808080"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/adapter_frg_order_tv_option2"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_margin="6dp"
            android:background="@drawable/blue_border_rounded_corner_state"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#2e82fe"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/adapter_frg_order_tv_option3"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_margin="6dp"
            android:background="@drawable/gray_border_rounded_corner_state"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="#808080"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>